@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model WaterCool.Models.LoginViewModel


@{
    ViewData["Title"] = "Sign up";
}

<h2>@ViewData["Title"]</h2>
<div class="row" style="height:100%;">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4>Sign up !</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" placeholder="輸入test會出現帳號重複"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password"></label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                    <button type="submit" class="btn btn-default">SignUp</button>
                    <span class="text-danger">@ViewData["noUser"]</span>
                </div>
                <div class="form-group">

                    <p>
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Already have account?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}